<div id="shopping">
<div class="best">
  <div id="owl-demo" class="owl-carousel owl-theme"> 
    <% @bestsellers.each do |book| %>
      <div>
        <div class="book_info">
          <div class="book_title">
            <%= book.title %> 
          </div> <%= t(:by) %> <%= link_to books_authors_link(book), author_path(book.author.id) %>
        </div>
        <div class="cover_desc">
          <div class="cover">
            <%= link_to image_tag(book.cover.url(:med)), book %>
          </div>
          <div class="desc">
            <%= book.description %>
          </div>
          <div class="to_cart">
            <div class="book_ord">
              <div class="boldy">$ <%= book.price %></div>                      
            </div>
            <% if book.quantity == 0 %>
              <div class="sold_out"></div>
            <% else %>
              <%= form_tag(line_items_path(book_id: book), method: 'post') do %>
              <%= number_field_tag(:new_quantity, 1, in: 1..book.quantity, step: 1, :style => "width: 50px;") %>
                <div class="actions">
                  <%= submit_tag( t(:add_to_cart) ) %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="space"></div>
  <p><%=t :welcome %></p>
</div>
</div>