<div class="checkout">
  <h1>Checkout</h1>

  <div class="link_to_steps">
      <div class="step_visit"><%= link_to "ADDRESS", checkout_path(:address), method: :get %></div> 
      <div class="current_step"><%= link_to "DELIVERY", checkout_path(:delivery), method: :get %></div>
      <div><%= link_to "PAYMENT", checkout_path(:payment), method: :get %></div>
      <div><%= link_to "CONFIRM", checkout_path(:confirm), method: :get %></div>
      <div>COMPLETE</div>
  </div>

  <%= form_for @checkout, url: checkout_path(:payment), method: :get do |f| %>
    <ul>
      <% Delivery.all.each do |del| %>  
      <li>
        <% if del.id == 1 %>
          <%= f.radio_button :delivery, del.id, :checked => true  %>
        <% else %>
        <%= f.radio_button :delivery, del.id, :checked => false  %>
        <% end %>
        <%= f.label :delivery, "#{del.method} $ #{del.price}" %>
      </li>
      <% end %>
    </ul>
    <div class="actions">
      <%= f.submit "Continue" %>
    </div>

  <% end %>
  <div class = "order_sum">
    <h1>ORDER SUMMARY</h1>
    <p>ITEM TOTAL: $<%= sub_total %></p>
    <p>ORDER TOTAL: $<%= sub_total %></p>
  </div>
</div>