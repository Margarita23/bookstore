<div class="checkout">
  <h1><%= t(:checkout) %></h1>

  <div class="link_to_steps">
      <div class="current_step"><%= link_to t(:address), checkout_path(:address), method: :get %></div> 
      <div><%= link_to t(:delivery), checkout_path(:delivery), method: :get %></div>
      <div><%= link_to t(:payment), checkout_path(:payment), method: :get %></div>
      <div><%= link_to t(:confirm), checkout_path(:confirm), method: :get %></div>
      <div><%= t(:complete) %></div>
  </div>

  <%= form_for Checkout.new, url: checkout_path(:delivery), method: :get do |f| %>
    <div class="order_address">
      <table class="address">
        <tr>
          <th><%= t(:bill_address)%></th>
          <th><%= t(:ship_address)%></th>
        </tr>
        <tr>
          <td>
            <div class="field">  
              <%= f.text_field :bill_f_name, size: 25, placeholder: t(:first_name), value: current_user.billing_address.first_name %> 
            </div>
            <div class="field">
              <%= f.text_field :bill_l_name, placeholder: t(:last_name), size: 25, value: current_user.billing_address.last_name %>
            </div>
            <div class="field">
              <%= f.text_field :bill_street, value: current_user.billing_address.street, placeholder: t(:street_address), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :bill_city, value: current_user.billing_address.city, placeholder: t(:city), size: 25 %>
            </div>
            <div class="field"> 
              <%= f.text_field :bill_country, value: current_user.billing_address.country, placeholder: t(:country), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :bill_zip, value: current_user.billing_address.zip, placeholder: t(:zip), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :bill_phone, value: current_user.billing_address.phone, placeholder: t(:phone), size: 25 %>
            </div>
            <div class="to_check">
            </div>
          </td>
          <td id = "shipping_add">
            <div class="field">
              <%= f.text_field :ship_f_name, value: current_user.shipping_address.first_name, placeholder: t(:first_name), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_f_name, value: current_user.shipping_address.last_name, placeholder: t(:last_name), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_street, value: current_user.shipping_address.street, placeholder: t(:street_address), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_city, value: current_user.shipping_address.city, placeholder: t(:city), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_country, value: current_user.shipping_address.country, placeholder: t(:country), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_zip, value: current_user.shipping_address.zip, placeholder: t(:zip), size: 25 %>
            </div>
            <div class="field">
              <%= f.text_field :ship_phone, value: current_user.shipping_address.phone, placeholder: t(:phone), size: 25 %>
            </div>
          </td>
        </tr>
      </table>
      <div id = "same_address">  
        <div class="to_check">
          <%= f.check_box :same_address, id: "checkbox_use_same_address", :checked => false %> <%= t(:same_address)%>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit t(:save_continue) %>
    </div>
  <% end %>
  <div class = "order_sum">
    <h1><%= t(:ord_summary)%></h1>
    <p><%= t(:item_total)%>: $<%= sub_total %></p>
    <p><%= t(:ord_total)%>: $<%= sub_total %></p>
  </div>
</div>
