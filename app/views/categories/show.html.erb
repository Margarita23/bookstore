<ol class="breadcrumb">
  <li><%= link_to t( :home_page ), root_path%></li>
  <li><%= link_to t( :shopping ), shopping_path %></li>
  <li class="active"><%= @category.title %></li>
</ol>
<div class="outside">
  <div id="shopping">
    <div id="shop">  
      <% @category.books.each do |book|  %>
        <div id="shop_item">
          <div class="cover_item">  
            <%= link_to book do %>
            <%= link_to cl_image_tag("bookshop/#{book.cover_line}", :secure => true, :width => 180, :height => 250, :crop => :fill), book %>
            <% end %>
          </div>
          <div class="title_item">  
            <%= link_to book.title, book %>
          </div>
          <div class="price_item">
            <div class="boldy">$<%= book.price %></div>
          </div>
        </div>
      <% end %>
      <% if @category.books.count == 0 %>
        <p><%= I18n.t(:no_books)%></p>
      <% end %>
      <div id="pages"></div>
    </div>
    <div id="categories">
      <p><%= t(:categories) %></p>
      <ol>
        <% @categories.each do |category| %>
          <li> <%= link_to category.title, category %> </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>