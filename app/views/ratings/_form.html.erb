<%= form_for @rating, url: book_ratings_path do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :headline %><br>
    <%= f.text_field :headline %>
  </div>
  <div class="field">
    <div class="boldy">Rating:</div> <%= f.number_field :grade, value: 5, max: 5, min: 0, :style => "width: 50px;" %><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
  </div>
  <div class="field">
    <%= f.label :review %><br>
    <%= f.text_area :review, cols: "70", rows: "5", :maxlength => 500 %>
  </div>
  <div class="actions">
    <%= f.submit %> or <%= link_to 'Cancel', book_path(params[:book_id]) %>
  </div>
<% end %>
