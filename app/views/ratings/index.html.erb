<p id="notice"><%= notice %></p>

<h1>Listing Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.review %></td>
        <td><%= rating.book %></td>
        <td><%= link_to 'Show', rating_path(rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
