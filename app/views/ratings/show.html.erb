<div class="outside">
  
<div class="reviews">
  <div class="stars">
    <%= t(:rating)%>: <div class="grade"><%= @rating.grade %></div>
  </div>
  <div class="headline"><%= @rating.headline %></div>
  <div class="rev_create"><%= l(@rating.created_at, format: :long)%></div>
  <div class="author">
    <%=t(:by)%>
    <% if !@rating.user.billing_address.first_name.blank? %>
      <%=link_to "#{@rating.user.billing_address.first_name} #{@rating.user.billing_address.last_name}" %>
    <% else %>
      <%=link_to @rating.user.email, book_rating_path(@rating.book.id, @rating.id) %>
    <% end %>
  </div>
  <div class="rev_text"><%= @rating.review %></div>
</div>
  <%= link_to t(:to_book), book_path(params[:book_id]) %>
</div>