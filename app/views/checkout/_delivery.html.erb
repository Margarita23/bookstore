<div class="link_to_steps">
  <div class="step_visit"><%= f.button "ADDRESS", :name => "address_button" %></div> 
  <div class="current_step"><%= f.button "DELIVERY", :name => "delivery_button" %></div>
  <div><%= f.button "PAYMENT", :name => "payment_button" %></div>
  <div><%= f.button "CONFIRM", :name => "confirm_button" %></div>
  <div>COMPLETE</div>
</div>

<h2>Delivery</h2>

<ul>
  <% Delivery.all.each do |del| %>  
  <li>
    <%= f.radio_button(:delivery, del.id) %><%= del.method %> + $ <%= del.price %> 
  </li>
  <% end %>
</ul>

