<table id="confirm">
  <tr>
    <th><%= t(:ship_address)%></th>
    <th><%= t(:bill_address)%></th>
    <th><%= t(:delivery_confirm)%></th>
    <th><%= t(:pay_data)%></th>
  </tr>
  <td>
    <ul>
      <li><%= @order.billing_address.first_name %> <%= @order.billing_address.last_name %></li>
      <li><%= @order.billing_address.street %></li>
      <li><%= @order.billing_address.city %> <%= @order.billing_address.country %> <%= @order.billing_address.zip %></li>
      <li><%= t(:phone)%> <%= @order.billing_address.phone %></li> 
    </ul>
  </td>
  <td>
    <ul>
      <li><%= @order.shipping_address.first_name %> <%= @order.shipping_address.last_name %></li>
      <li><%= @order.shipping_address.street %></li>
      <li><%= @order.shipping_address.city %> <%= @order.shipping_address.country %> <%= @order.shipping_address.zip %></li>
      <li><%= t(:phone)%> <%= @order.shipping_address.phone %></li>
    </ul>
  </td>
  <td>
    <ul>
      <li><%= @order.delivery.method %></li>  
    </ul>
  </td>  
  <td>
    <ul>
      <li><%= @order.credit_card.number %></li>  
      <li><%= @order.credit_card.month %>/<%= @order.credit_card.year %></li>  
    </ul>
  </td>
</table>