<div class="checkout">
  <h3><%= t(:order)%> <%= @order.number %></h3>
  <div class="steps">  
    <%= render "info_order" %>
  </div>
  <table class="cart">
    <th><%= t(:book) %></th>
    <th><%= t(:price) %></th>
    <th><%= t(:qty) %></th>
    <th><%= t(:total) %></th>
    <%= render "orders_items", collection: @order.line_items %>
  </table>
  <div class="order_total">  
    <div>
    <%= t(:subtotal)%>: $ <%= @order.order_sub_total %>
    </div>
    <div>
      <%= t(:discount)%>: <%= @order.coupon.nil? ? 0 : @order.coupon.discount %> %
    </div>
    <div>
      <%= t(:total)%>: $ <%= @order.total_price - @order.delivery.price %>
    </div>
    <div>
      <%= t(:shipping)%>: $ <%= @order.delivery.price %>
    </div>
    <div>
      <%= t(:ord_total)%>: $ <%= @order.total_price %>
    </div>
  </div> 
  <div class="dotted"></div>
  <div class="back_to_store">
    <%= button_to t(:to_store), shopping_path, method: :get %>
  </div>
</div>