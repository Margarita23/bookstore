<div class="checkout">
  <h3><%= t(:order)%> <%= @order.number %></h3>
  <div class="steps">  
    <table id="confirm">
      <tr>
        <th><%= t(:ship_address)%></th>
        <th><%= t(:bill_address)%></th>
        <th><%= t(:delivery)%></th>
        <th><%= t(:pay_data)%></th>
      </tr>

      <td>
        <ul>
          <li><%= @order.billing_address.first_name %> <%= @order.billing_address.last_name %></li>
          <li><%= @order.billing_address.street %></li>
          <li><%= @order.billing_address.city %> <%= @order.billing_address.country %> <%= @order.billing_address.zip %></li>
          <li><%= t(:phone)%> <%= @order.billing_address.phone %></li> 
        </ul>
      </td>

      <td>
        <ul>
          <li><%= @order.shipping_address.first_name %> <%= @order.shipping_address.last_name %></li>
          <li><%= @order.shipping_address.street %></li>
          <li><%= @order.shipping_address.city %> <%= @order.shipping_address.country %> <%= @order.shipping_address.zip %></li>
          <li><%= t(:phone)%> <%= @order.shipping_address.phone %></li>
        </ul>
      </td>

      <td>
        <ul>
          <li><%= @order.delivery.method %></li>  
        </ul>
      </td>
      
      <td>
        <ul>
          <li><%= @order.credit_card.number %></li>  
          <li><%= @order.credit_card.month %>/<%= @order.credit_card.year %></li>  
        </ul>
      </td>
    </table>
  </div>
  
  <table class="cart">
  
    <th><%= t(:book) %></th>
    <th><%= t(:price) %></th>
    <th><%= t(:qty) %></th>
    <th><%= t(:total) %></th>
  
    <% @order.line_items.each do |item| %>
      <tr>
        <td>
          <div class="cover">
            <%= image_tag(item.book.cover.url()) %>
          </div>
          <div class="book_info_in_cart">
            <div class="book_title">
              <%= item.book.title %>
            </div>
            <div class = "desc">
              <%= item.book.description %>
            </div>
          </div>
        </td>
        <td>
          <%= item.book.price %>
        </td>
        <td>
          <%= item.quantity %>
        </td>
        <td>
          <%= item.book.price * item.quantity %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="order_total">  
    <div>
    <%= t(:subtotal)%>: $ <%= @order.order_sub_total %>
    </div>
    <div>
      <%= t(:discount)%>: <%= discount %> %
    </div>
    <div>
      <%= t(:subtotal)%>: $ <%= @order.total_price - @order.delivery.price %>
    </div>
    <div>
      <%= t(:shipping)%>: $ <%= @order.delivery.price %>
    </div>
    <div>
      <%= t(:ord_total)%>: $ <%= @order.total_price %>
    </div>
  </div>
  <div class="dotted"></div>
  <div class="back_to_store">
    <%= button_to t(:to_store), shopping_path, method: :get %>
  </div>
</div>

