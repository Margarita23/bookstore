<p id="notice"><%= notice %></p>
<div class="checkout">
  <h1>Orders</h1>
  
  <div class="states">
    
    <div class="in_prog">
      <% if params[:view] %>
        <%= render 'view_order' %>
        <%= button_to 'GO TO STORE', shopping_path %>
      <% end %>
    </div>
  
    <div class="in_progress">
      <div class="naming">waiting for processing</div>
      <table class="orders">
        <thead>
          <th>number</th>
          <th>completed at</th>
          <th>total</th>
          <th></th>
        </thead>
        <tbody>
          <% @orders_prog.each do |order| %>
          <tr>
            <td><%= link_to order.number, order %></td>
           
            <td><%= order.created_at.to_date %></td>
             <td><%= order.total_price %></td>
            <td><%= link_to 'View', orders_path(id: order.id, view: true) %></td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>


    <div class="in_delivery">
      <div class="naming">in delivery</div>
      <table class="orders">
        <thead>
          <th>number</th>
          <th>completed at</th>
          <th>total</th>
          <th></th>
        </thead>
        <tbody>
          <% @orders_ship.each do |order| %>
          <tr>
            <td><%= link_to order.number, order %></td>
           
            <td><%= order.created_at.to_date %></td>
             <td><%= order.total_price %></td>
            <td><%= link_to 'View', orders_path(id: order.id, view: true) %></td>
          </tr>
        <% end %>
        </tbody>

      </table>

    </div>

    <div class="delivered">
      <div class="naming">delivered</div>
      <table class="orders">
        <thead>
          <th>number</th>
          <th>completed at</th>
          <th>total</th>
          <th></th>
        </thead>
        <tbody>
          <% @orders_comp.each do |order| %>
          <tr>
            <td><%= link_to order.number, order %></td>
           
            <td><%= order.created_at.to_date %></td>
             <td><%= order.total_price %></td>
            <td><%= link_to 'View', orders_path(id: order.id, view: true) %></td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>

  <%= link_to 'New Order', shopping_path %>

</div>

